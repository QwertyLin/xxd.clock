<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/form_circle_radius" />
            <gradient android:startColor="@color/item_focused_from" android:endColor="@color/item_focused_to" android:angle="270.0" android:type="linear" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/form_circle_radius" />
            <gradient android:startColor="@color/item_focused_from" android:endColor="@color/item_focused_to" android:angle="270.0" android:type="linear" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/form_circle_radius" />
            <gradient android:startColor="@color/item_pressed_from" android:endColor="@color/item_pressed_to" android:angle="270.0" android:type="linear" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/form_circle_radius" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</selector>
