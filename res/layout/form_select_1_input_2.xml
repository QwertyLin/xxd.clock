<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46.0dip"
        android:background="@drawable/form_first_item"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="13.0dip"
        android:paddingRight="13.0dip" >

        <TextView
            style="@style/baseFormItemLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="铃声" />

        <TextView
            style="@style/baseFormItemContent"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="right"
            android:paddingLeft="9.0dip" />

        <ImageView
            android:layout_width="20.0dip"
            android:layout_height="13.0dip"
            android:layout_gravity="center"
            android:src="@drawable/more_right" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@drawable/normal_div" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46.0dip"
        android:background="@drawable/form_item"
        android:descendantFocusability="afterDescendants"
        android:focusable="true"
        android:paddingLeft="13.0dip"
        android:paddingRight="13.0dip" >

        <TextView
            style="@style/baseFormItemLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="标题" />

        <EditText
            style="@style/baseFormItemLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="22.0dip"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入标题"
            android:paddingRight="22.0dip"
            android:singleLine="true" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@drawable/normal_div" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46.0dip"
        android:background="@drawable/form_last_item"
        android:descendantFocusability="afterDescendants"
        android:focusable="true"
        android:paddingLeft="13.0dip"
        android:paddingRight="13.0dip" >

        <TextView
            style="@style/baseFormItemLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="备注" />

        <EditText
            style="@style/baseFormItemLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="22.0dip"
            android:background="@null"
            android:gravity="left"
            android:hint="选填"
            android:paddingRight="22.0dip"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>