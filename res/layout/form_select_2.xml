<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/form_select_2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dip"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/form_select_2_1"
        android:layout_width="fill_parent"
        android:layout_height="46.0dip"
        android:background="@drawable/form_first_item"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="13.0dip"
        android:paddingRight="13.0dip" >

        <TextView
            android:id="@+id/form_select_2_1_key"
            style="@style/baseFormItemLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/form_select_2_1_value"
            style="@style/baseFormItemContent"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="right"
            android:paddingLeft="9.0dip" />

        <ImageView
            android:layout_width="20.0dip"
            android:layout_height="13.0dip"
            android:layout_gravity="center"
            android:src="@drawable/more_right" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@drawable/normal_div" />

    <LinearLayout
        android:id="@+id/form_select_2_2"
        android:layout_width="fill_parent"
        android:layout_height="46.0dip"
        android:background="@drawable/form_last_item"
        android:descendantFocusability="afterDescendants"
        android:focusable="true"
        android:paddingLeft="13.0dip"
        android:paddingRight="13.0dip" >

        <TextView
            android:id="@+id/form_select_2_2_key"
            style="@style/baseFormItemLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/form_select_2_2_value"
            style="@style/baseFormItemContent"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="right"
            android:paddingLeft="9.0dip" />

        <ImageView
            android:layout_width="20.0dip"
            android:layout_height="13.0dip"
            android:layout_gravity="center"
            android:src="@drawable/more_right" />
    </LinearLayout>

</LinearLayout>